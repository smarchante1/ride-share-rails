<h2><%= @driver.name%></h2>

<ul>
<% @driver.trips.each do |trip| %>
  <li> 
  <%= "Trip Date: #{trip.date}"%>
  </li>
     <li> 
  <%= "Passenger Name: #{Passenger.find(trip.passenger_id).name}"%>
  </li>
     <li> 
  <%= "Price: #{trip.cost}"%>
  </li>
     <li> 
  <%= "Rating: #{trip.rating}"%>
  </li>
  <%# link to edit 
  link to delete %>
<% end %>
</ul>

<%= link_to "Delete driver", driver_path(@driver.id), method: :delete, data: {confirm: "Are you sure you want to delete that driver?"}%>
<%= link_to "Edit driver", edit_driver_path(@driver.id) %>
<%= link_to "Back to list of all driver", drivers_path %>