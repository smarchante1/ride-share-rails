<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %> 
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<section class="form">
  <%= form_with model: @passenger, class: form_class do |f| %>

  <p><%= intro_text %></p>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>

  <%= f.submit action_name, class: "passenger-form_save-button" %>
  <% end %>
</section>